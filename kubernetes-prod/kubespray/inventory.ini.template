#         node2:
#         node3:
#     kube_node:
#       hosts:
#         node4:
#         node5:
#     calico_rr:
#       hosts: {}

# Инструкция:
# 1. Создайте ВМ через scripts/create-vms-ha.sh
# 2. Проверьте IP-адреса в vms-ha-info.txt (в корне проекта)
# 3. Замените IP-адреса в hosts.yaml на реальные
# 4. Сохраните hosts.yaml в /tmp/kubespray/inventory/ha-cluster/hosts.yaml
# 5. После развертывания скопируйте hosts.yaml в этот файл (inventory.ini) для сдачи
